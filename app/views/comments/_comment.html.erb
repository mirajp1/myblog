<% if comment.id %>

<div class="row comment_whole">
		<div class="col-md-10 col-md-offset-1">
			
			<div class="comment_time row">
					<div class="commentor col-md-2 col-xs-4"><%= comment.commentor.name.titlecase %></div>
					<span class="glyphicon glyphicon-time col-xs-5 col-md-2"><span>
					<%= comment.created_at.strftime("%d %b %Y") %></span></span>
					
					<% if logged_in? && (comment.commentor ==@user || @user.admin?) %>
						<div class=" text-right col-md-8 col-xs-3" >						
							<%= link_to edit_comment_path(comment), :class => 'edit_comment_button' do %>
								<div class="glyphicon glyphicon-edit"></div>
							<% end %>
							<%= link_to comment_path(comment),method: :delete, data:{confirm: "Are you sure?"} do %>
								<div class="glyphicon glyphicon-remove"></div>
							<% end %>
						</div>
					<% end %>
				</div>
			<div class="comment_body row">
			<div class="col-md-12"><%= simple_format(comment.body) %></div>
			</div>
        </div>
    
</div>
<% end %>
