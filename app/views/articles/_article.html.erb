<div class="row article_whole">
    <div class="article_title col-md-10 col-md-offset-1">
        <div class="page-header">
            <%= link_to article ,id: 'article_title_link' do %><h3><%= article.title %></h3><% end %>
            <div class="article_author"><%= article.author.name.titlecase %></div>
			
            <div class="article_time row">
				<span class="glyphicon glyphicon-time col-md-2 col-xs-6"><span style="margin-left:5px"><%= article.created_at.strftime("%d %b %Y") %></span></span>
				<% if logged_in? && (article.author ==@user || @user.admin?) %>
					<div class=" text-right col-md-1 col-xs-3 col-md-offset-9 col-xs-offset-3" >
					<%= link_to edit_article_path(article), :class => 'edit_article_button' do %>
						<div class="glyphicon glyphicon-edit"></div>
					<% end %>

					<%= link_to article_path(article),method: :delete,data: {confirm: 'Are you sure?'} do %>
						<div class="glyphicon glyphicon-remove"></div>
					<% end %>
					</div>
				<% end %>
			</div>
        </div>
    </div>
    <div class="article_body col-md-10 col-md-offset-1">
        <%= simple_format(article.body) %>
    </div>
</div>
