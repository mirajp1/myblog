<div class="row">
    <div class="article_title col-md-9 col-md-offset-1">
        <div class="page-header">
            <h3><%= article.title %></h3>
            <div class="article_author"><%= article.author.name.titlecase %></div>
            <div class="article_time"><span class="glyphicon glyphicon-time"></span><span style="margin-left:5px"><%= article.created_at.strftime("%d %b %Y") %></span></div>
        </div>
    </div>
    <div class="article_body col-md-9 col-md-offset-1">
        <%= simple_format(article.body) %>
    </div>
</div>
